{
  "name": "@chargejs/udp",
  "version": "0.0.1",
  "description": "UDP Driver for the ChargeJs Framework",
  "main": "lib/udp.js",
  "scripts": {
    "test": "mocha --exit -r ts-node/register --colors **/*.spec.ts",
    "test:report": "npm run test && http-server ./coverage/lcov-report/",
    "coverage": "nyc npm run test",
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "dev:watch": "nodemon",
    "build": "tsc -p .",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\" ",
    "prepare": "npm run build",
    "prepublishOnly": "npm run coverage && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "Kilian Stallinger",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.6",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  }
}
